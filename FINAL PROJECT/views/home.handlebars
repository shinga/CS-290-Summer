<h1>What's in the MySQL Database?</h1>

<p>{{results}}</p>
<form>
    <fieldset>
    <legend>Add Activity</legend>
    <br>
    <label for="name">Activity Name: </label>
    <input type="text" name="name" id="name">
    <br><br>
    <label for="reps">Reps: </label>
    <input type="number" name="reps" id="reps">
    <br><br>
    <label for="weight">Weight: </label>
    <input type="number" name="weight" id="weight">
    <br><br>
    <label for="date">Date: </label>
    <input type="date" name="date" id="date">
    <br><br>
    <label for="lbs">Pounds </label>
    <input type="radio" name="lbs" value = true>
    <label for="lbs">Kilos </label>
    <input type="radio" name="lbs" value = false>
    <br><br>
    <input type="button" id="addActivity">

    </fieldset>
</form>
<br><br>
<table id="exercises">
    <tr>
        <th>Activity Name</th>
        <th>Reps</th>
        <th>Weight</th>
        <th>Pounds</th>
        <th>Date</th>
    {{#each resultlist}}
    <tr>
        <td>{{this.name}}</td>
        <td>{{this.reps}}</td>
        <td>{{this.weight}}</td>
        <td>{{this.lbs}}</td>
        <td>{{this.date}}</td>
        <td><input type="button" value="delete" onclick="deleteRow('exercises',this)" /></td>
    </tr>
    {{/each}}
</table>

<div id="tblCont">
</div>
<script type="text/javascript" src="/javascripts/myScript.js" ></script>
